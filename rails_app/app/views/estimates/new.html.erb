<div class="max-w-3xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">見積PDFアップロード</h2>

    <%= form_with url: estimates_path, method: :post, multipart: true, data: { turbo: false }, class: "space-y-6", id: "upload-form" do |form| %>
      <!-- Vendor Name (Optional) -->
      <div>
        <%= form.label :vendor_name, "業者名（オプション）", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :vendor_name,
            placeholder: "例：オートバックス",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        <p class="mt-1 text-sm text-gray-500">空欄の場合はPDFから自動抽出します</p>
      </div>

      <!-- PDF Upload (Drag & Drop) -->
      <div>
        <%= form.label :pdf, "見積PDFファイル", class: "block text-sm font-medium text-gray-700 mb-2" %>

        <div id="drop-zone"
             class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-blue-400 transition-colors cursor-pointer bg-gray-50">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <p class="mt-2 text-sm text-gray-600">
            <span class="font-semibold">クリックしてファイルを選択</span> またはドラッグ＆ドロップ
          </p>
          <p class="mt-1 text-xs text-gray-500">PDFファイル（最大10MB）</p>

          <%= form.file_field :pdf,
              accept: "application/pdf",
              class: "hidden",
              id: "pdf-input",
              required: true %>

          <p id="file-name" class="mt-4 text-sm font-medium text-blue-600 hidden"></p>
        </div>
      </div>

      <!-- Kintone Upload Option -->
      <div class="flex items-center">
        <%= form.check_box :send_to_kintone,
            { checked: true, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" },
            "1", "0" %>
        <%= form.label :send_to_kintone, "解析後にkintone（App 316）へ自動送信", class: "ml-2 text-sm text-gray-700" %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-between pt-4">
        <p class="text-sm text-gray-500">
          <strong>処理内容：</strong> Document AI でOCR → Azure OpenAI で価格分析 → kintone 送信
        </p>
        <%= form.submit "アップロードして解析開始",
            class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors disabled:opacity-50 disabled:cursor-not-allowed",
            id: "submit-btn",
            disabled: true %>
      </div>
    <% end %>
  </div>

  <!-- Instructions -->
  <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-blue-900 mb-3">使い方</h3>
    <ol class="list-decimal list-inside space-y-2 text-sm text-blue-800">
      <li>見積PDFファイルをアップロード（ドラッグ＆ドロップまたはクリック）</li>
      <li>「アップロードして解析開始」ボタンをクリック</li>
      <li>Google Document AI がPDFから表データを自動抽出</li>
      <li>Azure OpenAI (gpt-4o) が過去データと比較して価格分析</li>
      <li>結果をkintone App 316 のサブテーブル「発注書」に自動登録</li>
    </ol>
  </div>
</div>

<script>
  // Drag & Drop functionality
  const dropZone = document.getElementById('drop-zone');
  const fileInput = document.getElementById('pdf-input');
  const fileName = document.getElementById('file-name');
  const submitBtn = document.getElementById('submit-btn');

  // Click to select file
  dropZone.addEventListener('click', () => {
    fileInput.click();
  });

  // File input change
  fileInput.addEventListener('change', (e) => {
    handleFiles(e.target.files);
  });

  // Drag & Drop events
  dropZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-blue-500', 'bg-blue-50');
  });

  dropZone.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-blue-500', 'bg-blue-50');
  });

  dropZone.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-blue-500', 'bg-blue-50');

    const files = e.dataTransfer.files;
    if (files.length > 0) {
      fileInput.files = files;
      handleFiles(files);
    }
  });

  function handleFiles(files) {
    if (files.length === 0) return;

    const file = files[0];

    // Validate file type
    if (file.type !== 'application/pdf') {
      alert('PDFファイルを選択してください');
      return;
    }

    // Validate file size (10MB)
    if (file.size > 10 * 1024 * 1024) {
      alert('ファイルサイズは10MB以下にしてください');
      return;
    }

    // Display file name
    fileName.textContent = `選択されたファイル: ${file.name} (${(file.size / 1024).toFixed(1)} KB)`;
    fileName.classList.remove('hidden');

    // Enable submit button
    submitBtn.disabled = false;
  }

  // Form submission - show loading state
  document.getElementById('upload-form').addEventListener('submit', (e) => {
    submitBtn.disabled = true;
    submitBtn.textContent = '処理中... お待ちください（OCR → AI分析 → kintone送信）';
    submitBtn.classList.add('opacity-50', 'cursor-wait');
  });
</script>
