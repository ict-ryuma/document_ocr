<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h2 class="text-2xl font-bold text-gray-900">見積履歴</h2>
    <%= link_to "新しい見積をアップロード", new_estimate_path,
        class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>

  <!-- Estimates List -->
  <% if @estimates.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">業者名</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">見積日</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">税込合計</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">明細数</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">kintone</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">登録日時</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @estimates.each_with_index do |estimate, index| %>
              <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %> hover:bg-blue-50 transition-colors">
                <!-- ID -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  #<%= estimate.id %>
                </td>

                <!-- Vendor Name -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= estimate.vendor_name %></div>
                </td>

                <!-- Estimate Date -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= estimate.estimate_date %>
                </td>

                <!-- Total (Tax Included) -->
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <span class="text-sm font-semibold text-gray-900">
                    ¥<%= number_with_delimiter(estimate.total_incl_tax) %>
                  </span>
                </td>

                <!-- Items Count -->
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= estimate.estimate_items.count %>件
                  </span>
                </td>

                <!-- kintone Status -->
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <% if estimate.kintone_record_id.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      ✓ 送信済
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                      未送信
                    </span>
                  <% end %>
                </td>

                <!-- Created At -->
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= estimate.created_at.strftime('%Y-%m-%d %H:%M') %>
                </td>

                <!-- Actions -->
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "詳細", estimate_path(estimate),
                      class: "text-blue-600 hover:text-blue-900 font-medium" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Summary Stats -->
    <div class="grid grid-cols-3 gap-4">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <p class="text-sm text-gray-500">総見積数</p>
        <p class="text-2xl font-bold text-gray-900 mt-2"><%= @estimates.count %>件</p>
      </div>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <p class="text-sm text-gray-500">kintone送信済</p>
        <p class="text-2xl font-bold text-green-600 mt-2">
          <%= @estimates.count { |e| e.kintone_record_id.present? } %>件
        </p>
      </div>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <p class="text-sm text-gray-500">総明細数</p>
        <p class="text-2xl font-bold text-blue-600 mt-2">
          <%= @estimates.sum { |e| e.estimate_items.count } %>件
        </p>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m4 0h20M9 20h6m4 0h20M9 28h6m4 0h20M9 36h6m4 0h20" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">見積データがありません</h3>
      <p class="mt-2 text-sm text-gray-500">
        最初の見積PDFをアップロードして、Document AI + Azure OpenAI による価格分析を始めましょう
      </p>
      <%= link_to "見積をアップロード", new_estimate_path,
          class: "mt-6 inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
    </div>
  <% end %>
</div>
