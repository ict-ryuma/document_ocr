<div class="space-y-6">
  <!-- Header Section -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h2 class="text-2xl font-bold text-gray-900"><%= @estimate.vendor_name %> の見積</h2>
        <p class="text-sm text-gray-500 mt-1">見積日: <%= @estimate.estimate_date %></p>
        <p class="text-sm text-gray-500">ID: <%= @estimate.id %></p>
      </div>
      <div class="text-right">
        <p class="text-3xl font-bold text-blue-600">¥<%= number_with_delimiter(@estimate.total_incl_tax) %></p>
        <p class="text-sm text-gray-500">（税込）</p>
      </div>
    </div>

    <!-- kintone Link -->
    <% if @estimate.kintone_record_id.present? %>
      <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-lg flex items-center justify-between">
        <div class="flex items-center">
          <svg class="h-5 w-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm font-medium text-green-800">kintone App 316 に登録済み</span>
        </div>
        <span class="text-sm text-green-700">Record ID: <%= @estimate.kintone_record_id %></span>
      </div>
    <% end %>

    <!-- Summary -->
    <div class="mt-6 grid grid-cols-3 gap-4 pt-4 border-t border-gray-200">
      <div>
        <p class="text-sm text-gray-500">税抜合計</p>
        <p class="text-lg font-semibold text-gray-900">¥<%= number_with_delimiter(@estimate.total_excl_tax) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">税込合計</p>
        <p class="text-lg font-semibold text-gray-900">¥<%= number_with_delimiter(@estimate.total_incl_tax) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">明細数</p>
        <p class="text-lg font-semibold text-gray-900"><%= @estimate.estimate_items.count %>件</p>
      </div>
    </div>
  </div>

  <!-- AI Overall Advice -->
  <% if @ai_analysis && @ai_analysis[:overall_advice] %>
    <div class="bg-gradient-to-r from-purple-50 to-blue-50 rounded-lg shadow-sm border border-purple-200 p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-lg font-semibold text-purple-900">Azure OpenAI 総合評価</h3>
          <p class="mt-2 text-purple-800 leading-relaxed"><%= @ai_analysis[:overall_advice] %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Items Table with AI Analysis -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">明細一覧 + AI価格分析</h3>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">品名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">費目</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">数量</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">単価（税抜）</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">平均単価</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">AIアドバイス</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @estimate.estimate_items.each_with_index do |item, index| %>
            <%
              # Get AI analysis for this item
              ai_item = @ai_analysis&.dig(:items_analysis)&.find { |ai| ai[:item_name_norm] == item.item_name_norm } || {}
              avg_price = ai_item[:avg_price]
              advice = ai_item[:advice]
              current_price = item.amount_excl_tax
              price_status = if avg_price
                if current_price > avg_price
                  "higher"
                elsif current_price < avg_price
                  "lower"
                else
                  "same"
                end
              else
                "no_data"
              end
            %>

            <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
              <!-- Item Name -->
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= item.item_name_raw %></div>
                <div class="text-xs text-gray-500"><%= item.item_name_norm %></div>
              </td>

              <!-- Cost Type -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if item.cost_type == 'parts' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">部品</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">工賃</span>
                <% end %>
              </td>

              <!-- Quantity -->
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                <%= item.quantity || 1 %>
              </td>

              <!-- Current Price -->
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <span class="text-sm font-semibold <%= price_status == 'higher' ? 'text-red-600' : price_status == 'lower' ? 'text-green-600' : 'text-gray-900' %>">
                  ¥<%= number_with_delimiter(current_price) %>
                </span>
              </td>

              <!-- Average Price -->
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <% if avg_price %>
                  <span class="text-sm text-gray-500">¥<%= number_with_delimiter(avg_price) %></span>
                <% else %>
                  <span class="text-xs text-gray-400">データなし</span>
                <% end %>
              </td>

              <!-- AI Advice -->
              <td class="px-6 py-4">
                <% if advice.present? %>
                  <div class="text-sm text-gray-700">
                    <%= advice %>
                  </div>
                <% else %>
                  <span class="text-xs text-gray-400">分析なし</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex gap-4 justify-between">
    <%= link_to "← 履歴に戻る", estimates_path,
        class: "px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors" %>

    <%= link_to "新しい見積をアップロード →", new_estimate_path,
        class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>

  <!-- Debug Information (Development Only) -->
  <% if Rails.env.development? %>
    <details class="bg-gray-100 border border-gray-300 rounded-lg p-4 mt-8">
      <summary class="cursor-pointer font-semibold text-gray-700">デバッグ情報（開発環境のみ）</summary>
      <pre class="mt-4 text-xs text-gray-600 overflow-x-auto"><%= JSON.pretty_generate(@ai_analysis || {}) %></pre>
    </details>
  <% end %>
</div>
